.Fares
    display flex
    flex-direction column
    justify-content space-evenly
    align-items center
    font-family sans-serif

    & > .Fare
        width 60%
        min-width 250px
        margin-bottom 50px
        transition flex .2s ease-out

@media screen and (min-width: 800px)
    .Fares > .Fare
        width 500px

@media screen and (min-width: 1000px)
    .Fares
        flex-direction row

        & > .Fare
            width 250px

@media screen and (min-width: 1200px)
    .Fares > .Fare
        width 360px
